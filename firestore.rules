
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if a user is an admin
    function isAdmin(userId) {
      return exists(/databases/$(database)/documents/users/admin) && get(/databases/$(database)/documents/users/admin).data.uid == request.auth.token.uid;
    }

    // Rules for the 'users' collection
    match /users/{userId} {
      
      // Allow anyone to create a new user document for themselves.
      // This is needed for the initial user creation (signup).
      allow create: if request.resource.data.id == userId;

      // Allow anyone to read user data. 
      // This is needed for login checks and to see if a username exists.
      allow read: if true;
      
      // Only an admin can update user documents (e.g., to change status to 'active').
      // A regular user cannot change their own status.
      allow update: if request.auth != null && isAdmin(request.auth.uid);
      
      // Only an admin can delete a user.
      allow delete: if request.auth != null && isAdmin(request.auth.uid);
    }
  }
}
