
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users Collection
    match /users/{userId} {
      // CREATE: Anyone can create their own user document.
      allow create: if request.auth.uid == userId;
      
      // READ: A user can only read their own document.
      allow read: if request.auth.uid == userId;

      // LIST: No one can list all users from the client.
      // This is important for security. Admin fetching should be done with care.
      allow list: if false;

      // UPDATE: A user can only update their own document.
      allow update: if request.auth.uid == userId;

      // DELETE: A user can delete their own document.
      allow delete: if request.auth.uid == userId;
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
