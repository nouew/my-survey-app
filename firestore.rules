rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes to all documents.
    // This is a secure default. As you add features that use Firestore,
    // you can add specific rules to allow access to certain collections.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
