
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    //
    // Rules for the 'users' collection.
    //
    match /users/{userId} {
      // Anyone can create a new user document (sign up).
      allow create: if request.resource.data.id == userId &&
                       request.resource.data.status == 'inactive' &&
                       "uid" in request.resource.data;

      // Anyone can read user documents (needed for login and checking if username exists).
      allow read: if true;

      // Only an authenticated admin user can update a user's status.
      // This is for activating/deactivating users.
      allow update: if request.auth != null &&
                       get(/databases/$(database)/documents/users/admin).data.uid == request.auth.token.uid &&
                       request.resource.data.keys().hasOnly(['id', 'uid', 'status']);
                       
      // No one can delete user documents directly.
      allow delete: if false;
    }
  }
}
