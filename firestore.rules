rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Allow a user to create their own profile.
      allow create: if request.auth.uid == userId;

      // Allow a user to read their own profile.
      allow read: if request.auth.uid == userId;

      // Only an admin can update a user's document (e.g., to activate them).
      // This rule checks if the person making the request has `isAdmin: true` in their own document.
      allow update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // This collection is now only listable by an authenticated admin.
    match /users/{userId} {
       allow list: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
  }
}
