rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // This function checks if the current user is an admin by looking at their own user document.
    function isUserAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }

    // Rules for individual user documents
    match /users/{userId} {
      // READ: A user can read their own document, and an admin can read any user's document.
      allow read: if request.auth.uid == userId || isUserAdmin();
      
      // CREATE: A user can create their own document when they sign up.
      allow create: if request.auth.uid == userId;

      // UPDATE: Only an admin can update a user document (e.g., to activate them).
      allow update: if isUserAdmin();
      
      // DELETE: Deleting user documents is disallowed for safety.
      allow delete: if false;
    }

    // Rules for the entire 'users' collection
    match /users {
        // LIST: Only an admin can get the list of all users for the admin panel.
        allow list: if isUserAdmin();
    }
  }
}
